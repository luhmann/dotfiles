function setproxy() {
  npm config set proxy http://proxy.inf.epost-dev.de:8080
  npm config set https-proxy http://proxy.inf.epost-dev.de:8080
  export HTTP_PROXY=http://proxy.inf.epost-dev.de:8080
  export HTTPS_PROXY=http://proxy.inf.epost-dev.de:8080
  git config --global http.proxy http://proxy.inf.epost-dev.de:8080
  git config --global https.proxy http://proxy.inf.epost-dev.de:8080
#  export NO_PROXY="*.local, 169.254/16, localhost, *.epost-dev.de, *.clear-mail.de, 10.172.*, 127.0.0.1, 192.168.*" 
}

function unsetproxy() {
  npm config rm proxy
  npm config rm https-proxy
  unset HTTP_PROXY
  unset HTTPS_PROXY
  unset NO_PROXY
  git config --global --unset http.proxy
  git config --global --unset https.proxy
}

