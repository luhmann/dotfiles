sha1 () {
  echo -n "$1" | shasum -a 1 | awk '{print $1}' | pbcopy
}

# Kill processes with fzf
fkill() {
  local pid
  pid=$(ps -ef | sed 1d | fzf -m | awk '{print $2}')

  if [ "x$pid" != "x" ]
  then
    echo $pid | xargs kill -${1:-9}
  fi
}

