# Tap for sitespeed.io
# tap tobli/browsertime

update
upgrade

# Install GNU core utilities (those that come with OS X are outdated)
install coreutils

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
install findutils

# Install more recent versions of some OS X tools
install homebrew/dupes/grep

# install postgres as dependency for php
install postgres

# Install php and dependencies
install php56 --with-pgsql
install php56-xhprof
install php56-xdebug
install php56-mcrypt
install phpunit
install phpmd
install php-code-sniffer
install php-version

# Install python and dependencies
install python
install python3

# Install everything else
install ag
install brew-cask
install bash
install dos2unix
install ffmpeg
install fish
install git
install graphicsmagick
install htop
install iftop
install jq
install legit
install mariadb
install ngrep
install node
install rbenv
install ruby-build
# install sitespeedio/sitespeedio/sitespeed.io
install ssh-copy-id
install vim
install wget
install youtube-dl

brew cleanup
